{
  "name": "publish-platform-server",
  "version": "1.0.0",
  "description": "发布平台后端服务",
  "private": true,
  "egg": {
    "typescript": true,
    "declarations": true
  },
  "scripts": {
    "start": "egg-scripts start --daemon --title=egg-server-publish-platform",
    "stop": "egg-scripts stop --title=egg-server-publish-platform",
    "dev": "egg-bin dev",
    "debug": "egg-bin debug",
    "test": "npm run lint -- --fix && npm run test-local",
    "test-local": "egg-bin test",
    "cov": "egg-bin cov",
    "tsc": "ets && tsc -p tsconfig.json",
    "ci": "npm run lint && npm run cov && npm run tsc",
    "autod": "autod",
    "lint": "eslint . --ext .ts",
    "clean": "ets clean"
  },
  "dependencies": {
    "egg": "^3.20.0",
    "egg-scripts": "^2.16.0",
    "egg-mysql": "^4.0.0",
    "egg-redis": "^2.4.0",
    "egg-jwt": "^3.1.7",
    "egg-cors": "^2.2.3",
    "egg-validate": "^2.0.2",
    "bcryptjs": "^2.4.3",
    "dayjs": "^1.11.10"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/bcryptjs": "^2.4.6",
    "autod": "^3.1.2",
    "autod-egg": "^1.1.0",
    "egg-bin": "^6.5.0",
    "egg-ci": "^2.1.0",
    "egg-mock": "^5.2.0",
    "eslint": "^8.55.0",
    "eslint-config-egg": "^13.0.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
